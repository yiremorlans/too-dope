<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit List Item</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Merriweather&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css"
    integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay" crossorigin="anonymous">

    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <section class="todo-container">
        <h2>Edit list item</h2>
        <section class="todo">

            <ul class="todo-list">
                <% todoTasks.forEach(data => {%>
                    <% if (data._id == idTask) { %> <!--start loop, check to see if matching task-->
                        <li class="todo-list-item">
                            <form action="/edit/<%= data._id%>" method="POST">
                                <input type="text" name="title" value="<%=data.title %>">
                                <textarea name="content" id="" cols="10" rows="10"><%=data.content %></textarea>
                                <button type="submit" class="confirm">Confirm</button>
                                <a href="/" class="cancel">Cancel</a>
                            </form>
                        </li>
                        <% } else { %>
                            <li class="todo-list-item"> <!--else render the list-->
                                <div class="todo-list-item-title">
                                    <%= data.title %>
                                </div>
                                <div class="todo-list-item-content">
                                    <%= data.content %>
                                </div>
                                <a href="/edit/<%=data._id %>" class="edit"><span class="fas fa-edit"></span></a>
                                <a href="/edit/remove/<%=data._id %>" class="remove"><span class="fas fa-times"></span></a>
                            </li>
                        <% } %>
                    <% }) %>
            </ul>
        </section>
    </section>
</body>
</html>